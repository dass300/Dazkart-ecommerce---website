        <div class="ms-auto">
            <a href="/admin/list-user" class="btn btn-outline-secondary w-auto me-3">List User</a>
          <a href="/admin/add-user" class="btn btn-outline-warning w-auto me-3">Add User</a>
            <a href="/admin/add-product" class="btn btn-success ms-auto">Add Products</a>

        </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{ this.Name}} </td>
                        <td>{{ this.Category}}  </td>
                        <td>{{ this.Description}} </td>
                        <td>{{ this.Price}} </td>

                        <td><img style="width:50px;height:50px"src="/product-image/{{this.image.[0]}}" alt=""></td>
                        <td>
                            <a href="/admin/edit-product/{{ this._id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-product/{{ this._id}}" class="btn btn-danger"
                             onclick=" return confirm('Are you want to delete {{this.Name}} ?')" >Delete</a>

                            </td>

                    </tr>

                {{/each}}


            </tbody>
        </table>





