<!-- SHOPING-CART-AREA   -->
<div class="shoping-cart section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="headline">
                    <h2>Shopping cart</h2>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="cart-product item">Product</th>
                                <th class="cart-product-name item">Product Name</th>
                                <th class="cart-qty item">Quantity</th>
                                <th class="cart-unit item">Unit price</th>
                                <th class="cart-delivery item">Delivery info</th>
                                {{!-- <th class="cart-sub-total last-item">Sub total</th> --}}
                                <th class="cart-romove item">Remove</th>
                            </tr>
                        </thead>
                        <!-- /thead -->
                        <tfoot>
                            <tr>
                                <td colspan="7">
                                    <div class="shopping-cart-btn">
                                        <a href="/"><button type="button" class="btn btn-default left-cart">Continue Shopping</a></button>
                                        <button type="button" class="btn btn-default right-cart right-margin">Clear
                                            shopping cart</button>
                                        <button type="button" class="btn btn-default right-cart">Update shopping
                                            cart</button>
                                    </div>
                                    <!-- /.shopping-cart-btn -->
                                </td>
                            </tr>
                        </tfoot>
                        <tbody>

                            {{#each product}}

                            <tr>
                                <td class="cart-image">
                                    <a href="#" class="entry-thumbnail">
                                        <img style="width: 70px;height:70px" src="/product-image/{{product.image.[0]}}"
                                            alt="" />
                                    </a>
                                </td>
                                <td class="cart-product-name-info">
                                    <div class="cc-tr-inner">
                                        <h4 class="cart-product-description"><a href="#">{{this.product.Name}}</a></h4>

                                        {{!-- <div class="cart-product-info">
                                            <span class="product-color">COLOR :</span><span>Black</span>
                                            <br />
                                            <span class="product-color">Size :</span><span>Large</span>
                                        </div> --}}

                                    </div>
                                </td>

                                <td class="cart-product-quantity">
                                    <div class="quant-input">
                                       <button class=" cart-item-count  mr-3" onclick="changeQuantity('{{this._id}}' ,'{{this.product._id}}','{{../user}}',-1)" >-</button>
                                     <span id= "{{this.product._id}}">{{this.quantity}}</span>
                                    <button class="cart-item-count ml-3" onclick="changeQuantity('{{this._id}}' ,'{{this.product._id}}','{{../user}}',1)" >+</button>

                                    </div>

                                </td>
                                <td class="cart-product-price">
                                    <div class="cc-pr">{{this.product.Price}}</div>
                                </td>
                                <td class="cart-product-delivery">
                                    <div class="cc-pr">Free shipping</div>
                                </td>
                                {{!-- <td class="cart-product-sub-total">
                                    <div class="cc-pr">$75</div>
                                </td> --}}
                                <td class="romove-item">
                                    <a href="#"onclick="removeProduct('{{this._id}}','{{this.product._id}}','{{../user}}')"><img src="/img/remove.png" alt="" />
                                    </a>
                                </td>
                            </tr>

                            {{/each}}

                        </tbody>
                        <!-- /tbody -->
                    </table>
                    <!-- /table -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- SHOPING-CART-AREA:END   -->

